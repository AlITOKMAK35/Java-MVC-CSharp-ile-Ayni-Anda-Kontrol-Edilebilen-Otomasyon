@model IEnumerable<Proje_Takip.Models.ProjeTakip.PersonelProjeleri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.js"></script>
<div class="card">
    <h5 class="card-header">Personel Projeleri Listesi</h5>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjeBaslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjeAciklama)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OlusturulmaTarihi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OncelikDurumu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TamamlanmaOrani)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TamamlanmaTarihi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TamamlanmaDurumu)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjeBaslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjeAciklama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OlusturulmaTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OncelikDurumu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamamlanmaOrani)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamamlanmaTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamamlanmaDurumu)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PersonelProjeleriId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PersonelProjeleriId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PersonelProjeleriId })
                    </td>
                    <td>
                        <a href="/PersonelProjeleris/Edit/@item.PersonelProjeleriId" class="btn btn-success"> <span class="tf-icons bx bx-edit"></span></a>
                        <a href="/PersonelProjeleris/Details/@item.PersonelProjeleriId" class="btn btn-primary"><span class="tf-icons bx bx-detail"></span></a>
                        <a href="/PersonelProjeleris/Delete/@item.PersonelProjeleriId" class="btn btn-danger" style="position:absolute"><span class="tf-icons bx bx-trash"></span></a>
                        <a href="/PersonelProjeleris/HareketFöyü/@item.PersonelProjeleriId" class="btn btn-warning"><span class="tf-icons bx bx-history"></span></a>

                    </td>
                </tr>
            }

        </table>
